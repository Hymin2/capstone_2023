<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right message"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:padding="10dp"
        android:background="@drawable/chat_right_message_style"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/message_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textSize="12dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/message_right"
        app:layout_constraintRight_toLeftOf="@id/message_right"/>

</androidx.constraintlayout.widget.ConstraintLayout>