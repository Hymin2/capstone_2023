<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SalePostActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/salePost_AppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/salePost_toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolbarColoredBackArrow"
            app:titleTextColor="@color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/salePostTitle_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="제목을 입력해주세요 (15자 제한)"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:maxLength="15"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salePost_AppBar" />

    <View
        android:id="@+id/salePost_devideLine"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salePostTitle_textview" />

    <TextView
        android:id="@+id/salePost_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="핸드폰 기종 선택"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salePost_devideLine" />

    <EditText
        android:id="@+id/salePost_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="가격을 입력해주세요"
        android:inputType="number"
        android:gravity="end"
        android:padding="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/salePost_productName"
        android:background="@null" />


    <ImageButton
        android:id="@+id/search_dialog_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ic_baseline_manage_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salePost_devideLine" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/square_border"
        android:gravity="top"
        android:hint="내용을 입력해주세요 (100자 제한)"
        android:maxLength="100"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/salePost_price"
        tools:layout_editor_absoluteX="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3">

        <ImageView
            android:id="@+id/salePost_imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"
            android:background="@drawable/square_border"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>