<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PhoneInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/phone_info_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/phone_info_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/iphone14pro"
            app:layout_constraintTop_toBottomOf="@id/phone_info_spinner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/phone_info_ap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="프로세서 "
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/phone_info_image"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/phone_info_apName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="프로세서 이름"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/phone_info_ap"
            app:layout_constraintLeft_toRightOf="@id/phone_info_ap"/>

        <TextView
            android:id="@+id/phone_info_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="디스플레이 "
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/phone_info_ap"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/phone_info_displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="디스플레이 이름"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/phone_info_ap"
            app:layout_constraintLeft_toLeftOf="@id/phone_info_apName"/>

        <TextView
            android:id="@+id/phone_info_displaySize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="디스플레이 크기"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/phone_info_displayName"
            app:layout_constraintLeft_toLeftOf="@id/phone_info_displayName"/>

        <TextView
            android:id="@+id/phone_info_displayResolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="해상도"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/phone_info_displaySize"
            app:layout_constraintLeft_toLeftOf="@id/phone_info_displayName"/>

        <TextView
            android:id="@+id/phone_info_ram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="RAM"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/phone_info_displayResolution"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/phone_info_ramCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="램 용량"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/phone_info_ram"
            app:layout_constraintLeft_toLeftOf="@id/phone_info_displayResolution"/>

        <TextView
            android:id="@+id/phone_info_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="내장 메모리"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/phone_info_ram"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/phone_info_memoryCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내장 메모리 용량"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/phone_info_memory"
            app:layout_constraintLeft_toLeftOf="@id/phone_info_displayResolution"/>

        <TextView
            android:id="@+id/phone_info_frontCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="전면 카메라"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/phone_info_memory"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/phone_info_frontCameraInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전면 카메라 정보"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/phone_info_frontCamera"
            app:layout_constraintLeft_toLeftOf="@id/phone_info_displayResolution"/>

        <TextView
            android:id="@+id/phone_info_mainCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="후면 카메라"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/phone_info_frontCamera"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/phone_info_mainCameraInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후면 카메라 정보"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/phone_info_mainCamera"
            app:layout_constraintLeft_toLeftOf="@id/phone_info_displayResolution"/>

        <TextView
            android:id="@+id/phone_info_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="배터리"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/phone_info_mainCamera"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/phone_info_batteryCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배터리 용량"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/phone_info_battery"
            app:layout_constraintLeft_toLeftOf="@id/phone_info_displayResolution"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>