<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left message"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:padding="10dp"
        android:background="@drawable/chat_left_message_style"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/message_left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textSize="12dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@id/message_left"
        app:layout_constraintLeft_toRightOf="@id/message_left"/>

</androidx.constraintlayout.widget.ConstraintLayout>